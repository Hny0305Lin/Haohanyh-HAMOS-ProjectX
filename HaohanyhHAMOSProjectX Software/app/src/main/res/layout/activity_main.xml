<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/haohanyh_hamos_lights_project"
            android:background="@color/Pink_is_fancy"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="italic"
            android:gravity="bottom|left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:orientation="vertical"
                android:background="@drawable/mainbackground" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/kaiqi"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:background="@drawable/activity_main_button"
                    android:text="@string/haohanyh_hamos_lights_project_manymain1"
                    android:textColor="@color/black"
                    android:textStyle="italic" />
                <Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/kaiqinew"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:background="@drawable/activity_main_button"
                    android:text="@string/haohanyh_hamos_lights_project_manymain_new1"
                    android:textColor="@color/black"
                    android:textStyle="italic" />

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/kaiqi2"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:background="@drawable/activity_main_button"
                    android:text="@string/haohanyh_hamos_lights_project_manymain2"
                    android:textColor="@color/black"
                    android:textStyle="italic" />

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/kaiqi3"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:background="@drawable/activity_main_button"
                    android:text="@string/haohanyh_hamos_lights_project_manymain3"
                    android:textColor="@color/black"
                    android:textStyle="italic" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/kaiqi4"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:background="@drawable/activity_main_button"
                    android:text="@string/haohanyh_hamos_lights_project_manymain4"
                    android:textColor="@color/black"
                    android:textStyle="italic" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/kaiqi5"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activity_main_button"
                    android:text="@string/haohanyh_hamos_lights_project_manymain5"
                    android:textColor="@color/black"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/kaiqi6"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activity_main_button"
                    android:text="@string/haohanyh_hamos_lights_project_manymain6"
                    android:textColor="@color/black"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/kaiqi7"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activity_main_button"
                    android:text="@string/haohanyh_hamos_lights_project_manymain7"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
