<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LianDong.ExceedRunActivity"
    android:background="@drawable/dust2_ct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/Pink_is_fancy"
            android:gravity="bottom|center"
            android:text="@string/haohanyh_hamos_lights_project"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="left|center"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">

            <ImageButton
                android:id="@+id/exit23333"
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/jt"
                android:onClick="ExitClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgtempliandong"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/temp"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="ContentDescription" />

            <Space
                android:layout_width="37.5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imghumiliandong"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/humi"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="ContentDescription" />

            <Space
                android:layout_width="37.5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imglightliandong"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/light"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtwenduliandong"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@drawable/label_customize_jianbian_01"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="温度____" />

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtshiduliandong"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@drawable/label_customize_jianbian_02"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="湿度____" />

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtlightliandong"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@drawable/label_customize_jianbian_03"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="光照____" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/txtpeopleliandong"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@drawable/label_customize_jianbian_04"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="当前____" />


            <ImageView
                android:id="@+id/imgpeopleliandong"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/infraned_security"
                android:gravity="center"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtlampliandong"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@drawable/label_customize_jianbian_01"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="台灯____" />

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtLEDliandong"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@drawable/label_customize_jianbian_02"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="LED____" />

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtFanliandong"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@drawable/label_customize_jianbian_03"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="风扇____" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imglampliandong"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/lamp"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="ContentDescription" />

            <Space
                android:layout_width="37.5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgledliandong"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/led"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="ContentDescription" />

            <Space
                android:layout_width="37.5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgfanliandong"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/fan"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>